# Production environment configuration
# !!! DO NOT COMMIT REAL VALUES !!!
# Set these via CI/CD secrets or secure vault

PORT=8080

# Database - use managed PostgreSQL in production
DATABASE_URL=postgres://YOUR_USER:YOUR_PASSWORD@YOUR_HOST:5432/jain_food?sslmode=require

# Redis - use managed Redis in production
REDIS_ADDR=YOUR_REDIS_HOST:6379

# SECRETS - generate with: openssl rand -base64 64
JWT_SECRET=CHANGE_ME_PRODUCTION_JWT_SECRET_MINIMUM_32_CHARS
OTP_SECRET=CHANGE_ME_PRODUCTION_OTP_SECRET_MINIMUM_32_CHARS

# Object Storage - use S3/GCS/managed MinIO in production
S3_ENDPOINT=https://your-s3-endpoint.com
S3_REGION=us-east-1
S3_ACCESS_KEY=YOUR_S3_ACCESS_KEY
S3_SECRET_KEY=YOUR_S3_SECRET_KEY
S3_BUCKET=jain-food-media-prod

# For docker-compose.prod.yml (if using self-hosted infra)
POSTGRES_USER=jain_food_user
POSTGRES_PASSWORD=CHANGE_ME_STRONG_PASSWORD
POSTGRES_DB=jain_food

MINIO_ROOT_USER=CHANGE_ME_MINIO_ACCESS
MINIO_ROOT_PASSWORD=CHANGE_ME_MINIO_SECRET

# API URL for web frontend (your production domain)
API_URL=https://api.yourdomain.com

GIN_MODE=release
