# QA environment configuration
# Copy this file and set real values before deployment

PORT=8080
DATABASE_URL=postgres://postgres:YOUR_QA_PASSWORD@postgres:5432/jain_food?sslmode=disable
REDIS_ADDR=redis:6379

# CHANGE THESE SECRETS - generate with: openssl rand -base64 32
JWT_SECRET=CHANGE_ME_QA_JWT_SECRET
OTP_SECRET=CHANGE_ME_QA_OTP_SECRET

# MinIO / S3 Configuration
S3_ENDPOINT=http://minio:9000
S3_REGION=us-east-1
S3_ACCESS_KEY=CHANGE_ME_MINIO_ACCESS
S3_SECRET_KEY=CHANGE_ME_MINIO_SECRET
S3_BUCKET=jain-food-media-qa

# For docker-compose.qa.yml
POSTGRES_PASSWORD=YOUR_QA_PASSWORD
MINIO_ROOT_USER=CHANGE_ME_MINIO_ACCESS
MINIO_ROOT_PASSWORD=CHANGE_ME_MINIO_SECRET

# API URL for web frontend (used during build)
API_URL=http://localhost:8080

GIN_MODE=release
