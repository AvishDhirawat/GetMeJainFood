# Jain Food App - Environment Configuration
# Copy this file to .env and fill in your values:
#   cp .env.example .env

# Server
PORT=8080

# Database (PostgreSQL with PostGIS)
POSTGRES_USER=postgres
POSTGRES_PASSWORD=change_this_secure_password
POSTGRES_DB=jain_food
DATABASE_URL=postgres://postgres:change_this_secure_password@localhost:5432/jain_food?sslmode=disable

# Redis
REDIS_ADDR=localhost:6379

# Security - CHANGE THESE IN PRODUCTION!
JWT_SECRET=change-this-to-a-secure-random-string
OTP_SECRET=change-this-to-another-secure-random-string

# S3/MinIO Object Storage (optional - for media uploads)
S3_ENDPOINT=http://localhost:9000
S3_REGION=us-east-1
S3_ACCESS_KEY=minioadmin
S3_SECRET_KEY=change_this_minio_secret
S3_BUCKET=jain-food-media

# SMS Gateway (future integration)
# SMS_API_KEY=
# SMS_SENDER_ID=
