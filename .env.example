# Jain Food App - Environment Configuration

# Server
PORT=8080

# Database (PostgreSQL with PostGIS)
# Replace YOUR_DB_PASSWORD with a secure password
POSTGRES_USER=postgres
POSTGRES_PASSWORD=YOUR_SECURE_DB_PASSWORD
POSTGRES_DB=jain_food
DATABASE_URL=postgres://${POSTGRES_USER}:${POSTGRES_PASSWORD}@localhost:5432/${POSTGRES_DB}?sslmode=disable

# Redis
REDIS_ADDR=localhost:6379

# Security - CHANGE THESE IN PRODUCTION!
JWT_SECRET=your-super-secret-jwt-key-change-in-production
OTP_SECRET=your-super-secret-otp-key-change-in-production

# S3/MinIO Object Storage (optional - for media uploads)
S3_ENDPOINT=http://localhost:9000
S3_REGION=us-east-1
S3_ACCESS_KEY=YOUR_S3_ACCESS_KEY
S3_SECRET_KEY=YOUR_S3_SECRET_KEY
S3_BUCKET=jain-food-media

# SMS Gateway (future integration)
# SMS_API_KEY=
# SMS_SENDER_ID=
